<div class="container d-flex flex-column mt-5">
    <div class="row align-items-center justify-content-center g-0">
        <div class="col-lg-5 col-md-8 py-8 py-xl-0">
            <div class="card shadow">
                <div class="card-body p-6">

                    <div class="card mb-3">
                        <div class="card-header text-center">
                            User Profile
                        </div>
                        <div class="card-body">
                            <p class="card-text"><strong>First Name:
                                </strong>{{user.firstName}}
                            </p>
                            <p class="card-text"><strong>Last Name:
                                </strong>{{user.lastName}}</p>
                            <p class="card-text">
                                <strong>Email: </strong>
                                {{user.email}}
                            </p>
                            <p class="card-text">
                                <strong>Date of birth: </strong>
                                {{user.dateOfBirth}}
                            </p>
                            <p class="card-text text-capitalize">
                                <strong>Gender: </strong>
                                {{user.gender}}
                            </p>
                            <p class="text-center"><a href="/users/update-profile"
                                    class="badge bg-primary text-decoration-none hover-color-none">Edit Profile</a></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>