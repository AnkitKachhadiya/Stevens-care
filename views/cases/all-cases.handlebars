{{> admin-header}}
<div class="container mt-4">
    <h1 class="text-center mb-4">All Cases</h1>

    <div class="list-group">
        {{#if allCases.length}}
        {{#each allCases}}
        <a href="case/{{_id}}" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
            <img src="../../public/images/case.png" alt="case-logo" width="32" height="32" class="flex-shrink-0" />
            <div class="d-flex gap-2 w-100 justify-content-between">
                <div>
                    <p class="mb-0">
                        <strong>Case Id: {{_id}}</strong>
                        {{#if isCaseOpen}}
                        <span class="badge rounded-pill bg-danger bg-sm">Open</span>
                        {{else}}
                        <span class="badge rounded-pill bg-success">Closed</span>
                        {{/if}}
                    </p>
                    <p class="mb-0">Student Name: {{firstName}} {{lastName}}</p>
                    <p class="mb-0 opacity-75">{{description}}</p>
                </div>
                <small class="opacity-50 text-nowrap">{{dateOfCreation}}</small>
            </div>
        </a>
        {{/each}}
        {{/if}}
    </div>
</div>

{{> admin-footer}}